PG_URI=freelance-platform
REDIS_URL=redis://localhost:6379
JWT_SECRET=your_jwt_secret_key
# Environment
NODE_ENV=development

# Port configuration
PORT=5000

# Database configuration for different environments
DEV_PG_URI=freelance-platform-dev
DEV_REDIS_URL=redis://localhost:6379
DEV_MONGODB_URI=mongodb://localhost:27017/freelance-platform-dev

STAGING_PG_URI=freelance-platform-staging
STAGING_REDIS_URL=redis://staging-redis:6379
STAGING_MONGODB_URI=mongodb://staging-db:27017/freelance-platform-staging

PROD_PG_URI=freelance-platform-prod
PROD_REDIS_URL=redis://production-redis:6379
PROD_MONGODB_URI=mongodb://production-db:27017/freelance-platform-prod

# Security
DEV_JWT_SECRET=dev_jwt_secret_key
STAGING_JWT_SECRET=staging_jwt_secret_key_more_complex
PROD_JWT_SECRET=production_jwt_secret_key_very_complex_and_secure

# Rate limiting
DEV_RATE_LIMIT=100
STAGING_RATE_LIMIT=50
PROD_RATE_LIMIT=20

# API keys for services
STRIPE_SECRET_KEY=sk_test_sample_key
SENDGRID_API_KEY=SG.test-api-key

# File storage
UPLOAD_DIR=./uploads